}
//------------------------------------------------------------------------------------------------------------
int utn_getnumero(float* numero,int limite, char* mensaje){
	int retorno=-1;
	float bufferNumero;

	for(int i=0;i<limite;i++){
		if(numero!=NULL&&mensaje!=NULL){

			printf("%s", mensaje);
			scanf("%f",&bufferNumero);
			*numero=bufferNumero;
			retorno=0;
		}
	}

	return retorno;
}
